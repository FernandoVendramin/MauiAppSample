<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.HomeView"
             Title="Home" 
             BackgroundColor="{StaticResource PageBackgroundColor}">
    <ContentPage.Content Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">
        <StackLayout Margin="10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text=".NET Maui no TDC Transformation" FontSize="Title" TextColor="White"/>

            <Frame Margin="0, 10"
                   BackgroundColor="White" 
                   CornerRadius="5" 
                   Padding="10" 
                   VerticalOptions="FillAndExpand" 
                   HorizontalOptions="FillAndExpand">
                <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="0,10">
                    <Image Source="tdc.png"
                           HorizontalOptions="CenterAndExpand"
                           HeightRequest="300"
                           WidthRequest="300"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>